<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView2"
                android:layout_width="900dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/lapangan_futsal" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_marginRight="10dp"
                    android:id="@+id/buttonMateri"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/materi_001"
                    android:text="Materi" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/buttonLatihan"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/latihan_001"
                    android:text="Latihan"/>
            </LinearLayout>

            <Button
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:id="@+id/buttonTentang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Tentang"
                android:drawableTop="@drawable/tentang_001"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>