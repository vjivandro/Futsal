<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.futsal.app.futsalapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_futsal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/page_menu" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MateriActivity"
            android:label="@string/page_materi"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MetodeLatihanActivity"
            android:label="@string/page_latihan"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TentangActivity"
            android:label="@string/page_tentang"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Materi.SejarahFutsalActivity"
            android:label="@string/page_sejarah"
            android:parentActivityName=".MateriActivity" />
        <activity
            android:name=".Materi.FutsalLawsGameActivity"
            android:label="@string/page_futsal"
            android:parentActivityName=".MateriActivity" />
        <activity
            android:name=".MetodeLatihan.TataCaraPelaksanaanActivity"
            android:label="@string/page_cara"
            android:parentActivityName=".MetodeLatihanActivity" />
        <activity
            android:name=".Tentang.ProfilActivity"
            android:label="@string/page_profile"
            android:parentActivityName=".TentangActivity" />
        <activity
            android:name=".Tentang.DeskripsiActivity"
            android:label="@string/page_deskripsi"
            android:parentActivityName=".TentangActivity" />
        <activity
            android:name=".Tentang.InfoActivity"
            android:label="@string/page_info"
            android:parentActivityName=".TentangActivity" />
        <activity
            android:name=".MetodeLatihan.VideoCaraPelaksanaanActivity"
            android:label="@string/page_video"
            android:parentActivityName=".MetodeLatihanActivity" />
        <activity android:name=".Tentang.WebViewActivity" />
        <activity android:name=".PetunjukActivity"></activity>
    </application>

</manifest>